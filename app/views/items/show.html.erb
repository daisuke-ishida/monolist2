<h1><%= @item.name %>-monolist</h1>
<h2><%= @item.name %>に関する情報です。この商品をほしい人、持っている人を表示しています。</h2>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% if @item.image? %> 
             <%= image_tag(item['mediumImageUrls'].first['imageUrl'].gsub('?_ex=128x128', '')) %>
          <% else %>
             <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <%= item.name %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @users_have.each do |user| %>
          <%= gravatar_for user %>
          <%= link_to 'User profile', user_path %>

        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @users_want.each do |user| %>
          <%= gravatar_for user %>
          <%= link_to 'User profile', user_path %>
        </div>
      </div> 
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', '#') %>
      </div>
    </div>
  </div>
</div>
